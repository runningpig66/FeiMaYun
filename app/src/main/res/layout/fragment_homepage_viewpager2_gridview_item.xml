<?xml version="1.0" encoding="utf-8"?><!--P2方格布局的GridView子项item布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <cn.aura.app.view.RoundImageView
        android:id="@+id/fragment_homepage_viewpager2_gridview_item_imageview"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:adjustViewBounds="true"
        android:maxWidth="46dp"
        android:maxHeight="46dp"
        android:scaleType="centerCrop"
        app:borderRadius="15dp"
        app:type="round"
        tools:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fragment_homepage_viewpager2_gridview_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:textColor="#555555"
        android:textSize="12sp"
        tools:text="测试文字" />
</LinearLayout>
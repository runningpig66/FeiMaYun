<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="22dp"
                android:src="@drawable/icon_t" />

            <TextView
                android:id="@+id/activity_face_to_face_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面授标题"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <!--灰色的分割粗线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_face_to_face_textview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/activity_face_to_face_textview3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/activity_face_to_face_textview4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:ellipsize="end"
                    android:maxLines="1" />
            </LinearLayout>

            <com.gcssloop.widget.RCRelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:round_corner="5dp">

                <ImageView
                    android:id="@+id/activity_face_to_face_imageview1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/guanghuanguoji_auto" />
            </com.gcssloop.widget.RCRelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="22dp"
                android:src="@drawable/icon_t" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程详情"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <com.tencent.smtt.sdk.WebView
                android:id="@+id/activity_face_to_face_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/rcLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_face_to_face_textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    tools:text="主讲教师：刘丰test" />

                <TextView
                    android:id="@+id/activity_face_to_face_textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:text="课程数量：3test" />
            </LinearLayout>

            <com.gcssloop.widget.RCRelativeLayout
                android:id="@+id/rcLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:round_corner="40dp"
                app:stroke_color="#eeeeee"
                app:stroke_width="1dp">

                <ImageView
                    android:id="@+id/activity_face_to_face_imageview2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher" />
            </com.gcssloop.widget.RCRelativeLayout>
        </RelativeLayout>
        <!--灰色的分割粗线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f0f0f0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f0f0f0" />


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#eeeeee" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <include layout="@layout/headtitle_layout" />

    </LinearLayout>

    <TextView
        android:id="@+id/activity_face_to_face_textview8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center"
        android:text="立即咨询"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</RelativeLayout>
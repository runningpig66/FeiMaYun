<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_mystudiesinfo3_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--没有试卷的界面-->
    <RelativeLayout
        android:id="@+id/mystudiesinfo3_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/mystudiesinfo3_imageview1"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:src="@drawable/none_message" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mystudiesinfo3_imageview1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="暂无班级"
            android:textColor="#515151"
            android:textSize="16sp" />
    </RelativeLayout>
</FrameLayout>
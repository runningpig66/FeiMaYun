<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root0"
    android:orientation="vertical">

    <include layout="@layout/headtitle_layout" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:src="@drawable/icon_t" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我学习的课程："
            android:textColor="#444444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mystudies_item_textview2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#444444"
            android:textSize="16sp"
            tools:text="中国文学历史" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/mystudies_item_layout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" />

    <cn.aura.feimayun.view.CourseListViewPager
        android:id="@+id/mystudies_item_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
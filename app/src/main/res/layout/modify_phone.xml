<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!--顶部右侧的关闭图片-->
    <ImageView
        android:id="@+id/page_close"
        android:layout_width="35dp"
        android:layout_height="64dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:src="@drawable/dialog_live_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/recyclerview_item_orangetop"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改手机号"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <EditText
            android:id="@+id/e_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_gray_radius_10"
            android:hint="请输入新手机号"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="7dp"
            android:paddingTop="13dp"
            android:paddingRight="7dp"
            android:paddingBottom="13dp"
            android:textColor="#666666"
            android:textColorHint="#cccccc"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/et_gray_radius_10"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/e_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:paddingTop="13dp"
                android:paddingRight="7dp"
                android:paddingBottom="13dp"
                android:textColor="#666666"
                android:textColorHint="#cccccc"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/activity_register_textView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:background="@drawable/button_orange"
                android:gravity="center"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/e_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_gray_radius_10"
            android:hint="请输入密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingLeft="7dp"
            android:paddingTop="13dp"
            android:paddingRight="7dp"
            android:paddingBottom="13dp"
            android:textColor="#666666"
            android:textColorHint="#cccccc"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recyclerview_item_whitebottom"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_orange"
            android:gravity="center"
            android:text="确认"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_rounded_white"
    android:orientation="vertical">

    <cn.aura.feimayun.view.HalfRoundImageView
        android:id="@+id/courselist_viewpager_gridview_bg_url"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/courselist_viewpager_gridview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#000"
        android:textSize="16sp"
        tools:text="课程名称" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/courselist_viewpager_gridview_rprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            tools:text="1元" />

        <TextView
            android:id="@+id/courselist_viewpager_gridview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/courselist_viewpager_gridview_rprice"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#999"
            android:textSize="12sp"
            tools:text="1元" />
    </RelativeLayout>

    <TextView
        android:id="@+id/courselist_viewpager_gridview_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#999"
        android:textSize="12sp"
        tools:text="直播时间" />

    <TextView
        android:id="@+id/courselist_viewpager_gridview_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:textColor="#999"
        android:textSize="12sp"
        tools:text="简介" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/courselist_viewpager_gridview_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="#999"
        android:textSize="12sp"
        tools:text="可能会隐藏掉" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/courselist_viewpager_gridview_imageview1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/list_icon_studyx" />

        <TextView
            android:id="@+id/courselist_viewpager_gridview_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/courselist_viewpager_gridview_imageview1"
            android:ellipsize="end"
            android:maxWidth="50dp"
            android:maxLines="1"
            android:text="999"
            android:textColor="#999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/courselist_viewpager_gridview_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>